        private void Form1_Load(object sender, EventArgs e)
        {

        }

        private void textBox1_TextChanged(object sender, EventArgs e)
        {

        }

        private void button1_Click(object sender, EventArgs e)
        {
            String ingresado = textBox1.Text;
            int num = Int32.Parse(ingresado);

            int perimetro, area;
            perimetro = num * 4;
            area = num * num;
            String sr =Convert.ToString(perimetro);
            
            String sa =Convert.ToString(area); 
            textBox4.Text = sa;
            textBox2.Text = sr;
        }
    }
